{
  "name": "screenshot-area",
  "version": "1.0.0",
  "description": "Lightweight JS library that takes screenshot from selected area",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "royestone <rodrigo.mata.ib@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build-tsc": "tsc",
    "build-browser": "esbuild ./src --bundle --minify --outfile=dist/screenshot-area.min.js",
    "build": "yarn run build-tsc && yarn run build-browser",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "test": "jest --config jest.config.json",
    "semantic-release": "semantic-release",
    "prepublish": "yarn run build",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "esbuild": "^0.14.14",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "repository": "git@github.com:rodrigomata/screenshot-area.git",
  "homepage": "https://github.com/rodrigomata/screenshot-area#readme",
  "bugs": {
    "url": "https://github.com/rodrigomata/screenshot-area/issues"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public",
    "branches": [
      "main"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn run lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
